{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

<h1 class="text-center">Recommended</h1>

<div class="card-deck2">
    {% for movie in recommended %}
        <div class="card2 text-white hover-action">
            <img src={{ movie.poster }} class="" alt={{ movie.title }}>
            <div class="hoverable">
                <h5 class="font-weight-bold movie-title">{{ movie.title }}</h5>
                <p class="font-weight-bold movie-synopsis">{{ movie.synopsis }}</p>
            </div>
        </div>
    {% endfor %}
</div>

<h1 class="text-center">Last Watched</h1>

<div class="card-deck2">
    {% for movie in last_watched %}
        <div class="card2 text-white hover-action">
            <img src={{ movie.poster }} class="" alt={{ movie.title }}>
            <div class="hoverable">
                <h5 class="font-weight-bold movie-title">{{ movie.title }}</h5>
                <p class="font-weight-bold movie-synopsis">{{ movie.synopsis }}</p>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}