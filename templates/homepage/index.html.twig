{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

<h1 class="text-center">Recommended</h1>

<div class="movie-list">
    <div class="card-deck">
        {% for movie in recommended %}
            <div class="card bg-dark text-white hover-action">
                <img src={{ movie.poster }} class="card-img" alt={{ movie.title }}>
                <div class="card-img-overlay hoverable">
                    <h5 class="card-title font-weight-bold">{{ movie.title }}</h5>
                    <p class="card-text font-weight-bold">{{ movie.synopsis }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<h1 class="text-center">Last Watched</h1>

<div class="movie-list">
    <div class="card-deck">
        {% for movie in last_watched %}
            <div class="card bg-dark text-white hover-action">
                <img src={{ movie.poster }} class="card-img" alt={{ movie.title }}>
                <div class="card-img-overlay hoverable">
                    <h5 class="card-title font-weight-bold">{{ movie.title }}</h5>
                    <p class="card-text font-weight-bold">{{ movie.synopsis }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}